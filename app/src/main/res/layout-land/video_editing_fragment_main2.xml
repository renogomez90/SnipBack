<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:controller_layout_id="@layout/exo_edit_controller_land"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:time_bar_min_update_interval="20"
        app:use_controller="true" />

    <LinearLayout
        android:id="@+id/edit_controls"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:background="@color/bottom_menu"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:transitionGroup="true"
        android:transitionName="edit_controls"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/extent_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Extend/Trim"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_extend" />

        <TextView
            android:id="@+id/cut_text_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="CutOut"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_cutout" />

        <TextView
            android:id="@+id/highlight_text_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Highlight"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_highlight" />

        <TextView
            android:id="@+id/slow_text_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Slow"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_slow" />

        <TextView
            android:id="@+id/speedup_text_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Speed"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_speed" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>