<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/photolabel"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/photo_button_background"
        android:fontFamily="@font/barlow_bold"
        android:gravity="center"
        android:text="PHOTOS"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="13sp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/llfooter"
        android:layout_below="@id/photolabel">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/showLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pullToRefresh"
        android:visibility="invisible">

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/import_con"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photolabel"
        android:visibility="gone">

        <ImageView
            android:contentDescription="@string/no_desc"
            android:id="@+id/player_view_image"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/click"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:hardwareAccelerated="true"
            android:visibility="visible" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llfooter"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:background="@color/bottom_menu"
        android:baselineAligned="false"
        android:weightSum="1"
        android:gravity="center">

        <TextView
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Camera"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_camera" />

        <TextView
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Link"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_link" />

        <TextView
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Filter"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_filter_results_button" />

        <TextView
            android:id="@+id/_button_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="View"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_view_unselected" />

        <TextView
            android:id="@+id/dropdown_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.2"
            android:drawablePadding="4dp"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Menu"
            android:textColor="@color/colorPrimaryGrey"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_menu" />
    </LinearLayout>

</RelativeLayout>