<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.exozet.android.core.ui.custom.SwipeDistanceView
        android:id="@+id/swipe_detector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#44AA0000" />

    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:background="@color/blackOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf= "@+id/iconContainer"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:background="@drawable/background_video_timer"
            >

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/colorPrimaryWhite" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="15sp" />
        </LinearLayout>

        <com.hipoint.snipback.Utils.SnipbackTimeBar
            android:id="@id/exo_progress"
            style="@style/Base.Widget.AppCompat.SeekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:theme="@style/SeekBar"/>

        <LinearLayout
            android:id="@+id/switch_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/keep_video_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:text="Keep Video"
                android:textSize="15sp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/iconContainer"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/back_arrow"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/background_black_round"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/button_gallery"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:contentDescription="@string/no_desc"
                android:src="@drawable/ic_back_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button_gallery"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/back_arrow"
            android:background="@drawable/background_black_round"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/back_arrow">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="16dp"
                android:contentDescription="@string/no_desc"
                android:src="@drawable/ic_gallery" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button_capture"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/background_black_round"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/button_gallery">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:contentDescription="@string/no_desc"
                android:src="@drawable/ic_shutter" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>