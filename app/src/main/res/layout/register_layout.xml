<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/con1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_snipback_logo"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:layout_below="@id/con1"
        android:layout_marginStart="37dp"
        android:layout_marginTop="41.91dp"
        android:layout_marginEnd="37dp"
        android:background="@color/colorPrimaryWhite">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/barlow_semibold"
            android:gravity="left"
            android:text="REGISTER TO GET STARTED"
            android:textColor="#212123"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="109dp"
            android:fontFamily="@font/barlow_semibold"
            android:text="BENEFITS"
            android:textColor="@color/colorPrimaryDimRed"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="167dp"
            android:fontFamily="@font/barlow_medium"
            android:text="@string/register"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </RelativeLayout>


    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="55dp"
        android:background="@color/colorPrimaryRed"
        android:fontFamily="@font/barlow_bold"
        android:text="REGISTER NOW!"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="18sp" />


</RelativeLayout>