<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/filterlabelfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_semibold"
        android:text="FILTER"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/color_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterlabelfil"
        app:layout_constraintTop_toTopOf="parent"

        >

        <TextView
            android:id="@+id/colorlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_bold"
            android:text="COLOR"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filterlabelfil" />

        <CheckBox
            android:id="@+id/color_one"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/filtercolor_one"
            android:button="@drawable/colour_filter_drawable"
            android:foregroundGravity="center" />

        <CheckBox
            android:id="@+id/color_two"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/filtercolor_two"
            android:button="@drawable/colour_filter_drawable"
            android:foregroundGravity="center" />

        <CheckBox
            android:id="@+id/color_three"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/filtercolor_three"
            android:button="@drawable/colour_filter_drawable"
            android:foregroundGravity="center" />

        <CheckBox
            android:id="@+id/color_four"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/filtercolor_four"
            android:button="@drawable/colour_filter_drawable"
            android:foregroundGravity="center" />

        <CheckBox
            android:id="@+id/color_five"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/filtercolor_five"
            android:button="@drawable/colour_filter_drawable"
            android:foregroundGravity="center" />
    </LinearLayout>

    <View
        android:id="@+id/separator_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/color_container" />


    <TextView
        android:id="@+id/audio_tag_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/barlow_bold"
        android:text="AUDIO TAG"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator_one" />

    <CheckBox
        android:id="@+id/audio_tag"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/audio_tag_rounded_corner_grey"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:button="@drawable/audio_tag_button"
        android:text="Audio"
        android:textColor="@color/colorHint"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/audio_tag_label"
        app:layout_constraintTop_toBottomOf="@+id/separator_one" />

    <View
        android:id="@+id/separator_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audio_tag_label" />

    <LinearLayout
        android:id="@+id/to_do_tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/separator_two">


        <TextView
            android:id="@+id/todotag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_bold"
            android:orientation="horizontal"
            android:text="TO DO TAG"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator_two" />


        <CheckBox
            android:id="@+id/share_later"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/audio_tag_rounded_corner_grey"
            android:button="@drawable/audio_tag_button"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center"
            android:text="@string/share_later"
            android:textColor="@color/colorHint"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_todo" />

        <CheckBox
            android:id="@+id/link_later"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/audio_tag_rounded_corner_grey"
            android:button="@drawable/audio_tag_button"
            android:fontFamily="@font/barlow_medium"
            android:gravity="center"
            android:text="Link Later"
            android:textColor="@color/colorHint"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_todo" />
    </LinearLayout>

    <View
        android:id="@+id/separator_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_do_tag_container" />

    <LinearLayout
        android:id="@+id/textTagContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/separator_three">

        <TextView
            android:id="@+id/text_tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_bold"
            android:gravity="center"
            android:text="TEXT TAGS"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filterVideoTagsList"
                    android:layout_width="wrap_content"
                    android:background="@color/colorHint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/colorHint"
                    android:orientation="vertical"
                    android:padding="5dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>