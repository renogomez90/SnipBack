<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_con"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/edit_cont"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/colour_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/edit_swipe_detector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.exozet.android.core.ui.custom.SwipeDistanceView
        android:id="@+id/edit_swipe_detector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@id/play_con2_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#44AA0000" />

    <TextView
        android:id="@+id/speed_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginTop="13dp"
        android:text="3X"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_length_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:text="Total Length"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/exo_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/total_length_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/play_con2_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/play_con1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/app_margin"
            android:paddingEnd="@dimen/app_margin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/back_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/back1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/no_desc"
                    android:src="@drawable/ic_back1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/change_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/app_margin"
                    android:clipToPadding="false"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/start"
                        android:layout_width="62dp"
                        android:layout_height="32dp"
                        android:background="@drawable/start_curve"
                        android:fontFamily="@font/barlow_semibold"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:text="BEGIN"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="10sp"
                        app:drawableStartCompat="@drawable/ic_next_start" />

                    <TextView
                        android:id="@+id/end"
                        android:layout_width="62dp"
                        android:layout_height="32dp"
                        android:background="@drawable/end_curve"
                        android:fontFamily="@font/barlow_semibold"
                        android:gravity="end|center"
                        android:paddingEnd="20dp"
                        android:text="END  "
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="10sp"
                        app:drawableEndCompat="@drawable/ic_next" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/accept_reject_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/reject"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/no_desc"
                        android:src="@drawable/ic_delete" />

                    <ImageView
                        android:id="@+id/accept"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="9dp"
                        android:contentDescription="@string/no_desc"
                        android:src="@drawable/ic_tick_done" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_con2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/app_margin"
            android:paddingEnd="@dimen/app_margin"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/no_desc"
                    android:src="@drawable/ic_back1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/no_desc"
                    android:src="@drawable/ic_save"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/toStartBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="35dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/no_desc"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_prev"
                    android:visibility="visible" />

                <Space
                    android:layout_width="35dp"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@id/exo_play"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/no_desc"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_play" />

                    <ImageButton
                        android:id="@id/exo_pause"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/no_desc"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pause_white" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_images"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginEnd="@dimen/app_margin"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_screentwo_editer_image"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="visible"
            android:transitionName="layout_images"
            android:transitionGroup="true"
            app:layout_constraintBottom_toBottomOf="@id/play_con2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/previewFrameList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:paddingStart="@dimen/app_margin"
                android:paddingEnd="@dimen/app_margin"
                android:scrollbars="none" />

            <FrameLayout
                android:id="@+id/timebar_holder"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <com.hipoint.snipback.Utils.SnipbackTimeBar
                    android:id="@id/exo_progress"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:elevation="8dp"
                    android:paddingBottom="3dp"
                    app:bar_height="40dp"
                    app:buffered_color="@android:color/transparent"
                    app:played_color="@android:color/transparent"
                    app:scrubber_drawable="@drawable/ic_thumb"
                    app:scrubber_enabled_size="35dp"
                    app:unplayed_color="@android:color/transparent" />

                <ProgressBar
                    android:id="@+id/previewBarProgress"
                    style="@style/Widget.MaterialComponents.CircularProgressIndicator"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white" />
            </FrameLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>