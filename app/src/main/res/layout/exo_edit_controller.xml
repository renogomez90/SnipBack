<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/play_con"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="100dp"
    android:layout_above="@id/edit_cont"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/play_con1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bottom_menu"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@+id/play_con2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="2.5"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/ic_back1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:weightSum="10">


            <TextView
                android:id="@+id/end"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="2.5"
                android:background="@drawable/end_curve"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="end|center"
                android:paddingEnd="20dp"
                android:text="END  "
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10sp"
                app:drawableEndCompat="@drawable/ic_next" />

            <TextView
                android:id="@+id/start"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:background="@drawable/start_curve"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="BEGIN"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10sp"
                app:drawableStartCompat="@drawable/ic_next_start" />

        </LinearLayout>


        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/ic_delete" />


        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="9dp"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/ic_tick_done" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="6dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/play_con1"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00/00:08"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="15sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/play_con2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bottom_menu"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="2.5"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/ic_back1" />


        <ImageView
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="2.5"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/ic_prev"
            android:visibility="visible" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

        <ImageButton
            android:id="@id/exo_play"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:contentDescription="@string/no_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@id/exo_pause"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:contentDescription="@string/no_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pause_white" />

        </FrameLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_toEndOf="@id/close"
            android:layout_weight="2.5"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/ic_save"
            android:visibility="visible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>