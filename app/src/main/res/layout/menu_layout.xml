<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="286dp"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/layout_tutorials">

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="21dp"
            android:src="@drawable/ic_tutorials"
            android:id="@+id/tutorial_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUTORIALS"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/tutorial_icon"
            android:id="@+id/tutorial_text" />

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="@dimen/app_margin"
            android:layout_height="13dp"
            android:src="@drawable/ic_forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:id="@+id/tutorial_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tutorial_icon"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp"
            android:background="@color/colorDarkGreyDim" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_feedback"
        android:layout_marginTop="12dp"
        android:layout_below="@id/layout_tutorials">

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginStart="21dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_feedback"
            android:id="@+id/feedback_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEEDBACK"
            android:layout_marginStart="14dp"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/feedback_icon"
            android:id="@+id/feedback_text" />

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="@dimen/app_margin"
            android:layout_height="13dp"
            android:src="@drawable/ic_forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:id="@+id/feedback_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/feedback_icon"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp"
            android:background="@color/colorDarkGreyDim" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_autodelete"
        android:layout_marginTop="12dp"
        android:layout_below="@id/layout_feedback">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_autodeletelabels">

            <ImageView
                android:contentDescription="@string/no_desc"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_marginStart="21dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_set_buffer"
                android:id="@+id/autodelete_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUFFER AUTO-DELETE"
                android:layout_marginStart="14dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/barlow_medium"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@id/autodelete_icon"
                android:id="@+id/autodelete_text" />

            <ImageView
                android:contentDescription="@string/no_desc"
                android:layout_width="@dimen/app_margin"
                android:layout_height="13dp"
                android:src="@drawable/ic_forward"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"
                android:id="@+id/autodelete_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/layout_autodeletelabels"
            android:id="@+id/layout_autodeleteactions">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_medium"
                android:textSize="13sp"
                android:id="@+id/autodelete_text_leabel"
                android:layout_marginStart="58dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/colorDarkGreyDim"
                android:text="AUTO-DELETE BUFFER VIDEO \nOLDER THAN:" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekBar2"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:layout_marginTop="19dp"
                android:layout_below="@id/autodelete_text_leabel"
                android:maxHeight="3dp"
                android:progressBackgroundTint="@color/colorPrimaryRed"
                android:progressTint="@color/colorPrimaryRed"
                android:thumb="@drawable/seekbarthump"
                android:progress="60"
                android:thumbTint="@color/colorPrimaryRed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_medium"
                android:textSize="14sp"
                android:id="@+id/autodelete_text_count"
                android:layout_below="@id/seekBar2"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="21dp"
                android:textColor="@color/colorPrimaryRed"
                android:layout_alignParentRight="true"
                android:text="7 days" />

            <Button
                android:layout_width="138dp"
                android:layout_height="38dp"
                android:layout_centerHorizontal="true"
                android:text="delete now"
                android:textSize="15sp"
                android:layout_marginTop="38dp"
                android:textColor="@color/colorPrimaryWhite"
                android:fontFamily="@font/barlow_medium"
                android:background="@color/colorPrimary"
                android:layout_below="@id/autodelete_text_count"
                android:id="@+id/auto_delete_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="delete all"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/colorPrimaryRed"
                android:textSize="15sp"
                android:layout_below="@id/auto_delete_button"
                android:id="@+id/auto_delete_button_all" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view_line"
            android:layout_below="@id/layout_autodeleteactions"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp"
            android:background="@color/colorDarkGreyDim" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_multipledelete"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:layout_below="@id/layout_autodelete">

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginStart="21dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete_black"
            android:id="@+id/multipledelete_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MULTIPLE DELETE"
            android:layout_marginStart="14dp"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/multipledelete_icon"
            android:id="@+id/multipledelete_text" />

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="@dimen/app_margin"
            android:layout_height="13dp"
            android:src="@drawable/ic_forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:id="@+id/multipledelete_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/multipledelete_icon"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp"
            android:background="@color/colorDarkGreyDim" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_import"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:layout_below="@id/layout_multipledelete">

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginStart="21dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_import"
            android:id="@+id/import_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMPORT"
            android:layout_marginStart="14dp"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/import_icon"
            android:id="@+id/import_text" />

        <ImageView
            android:contentDescription="@string/no_desc"
            android:layout_width="@dimen/app_margin"
            android:layout_height="13dp"
            android:src="@drawable/ic_forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:id="@+id/import_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/import_icon"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp"
            android:background="@color/colorDarkGreyDim" />
    </RelativeLayout>
</RelativeLayout>