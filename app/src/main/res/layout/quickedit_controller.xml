<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.exozet.android.core.ui.custom.SwipeDistanceView
        android:id="@+id/swipe_detector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#44AA0000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/accept_delete_holder"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/total_length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="center"
                android:text="Total Length"
                android:layout_marginBottom="3dp"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkGreyDim"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/barlow_semibold"
        android:text="00:00"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/accept_delete_holder"
        />

    <LinearLayout
        android:id="@+id/accept_delete_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginBottom="5dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/accept_reject_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/reject"
                android:layout_width="35dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:contentDescription="@string/no_desc"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/accept"
                android:layout_width="35dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginStart="9dp"
                android:contentDescription="@string/no_desc"
                android:src="@drawable/ic_tick_done" />
        </LinearLayout>
    </LinearLayout>

    <View android:id="@+id/separator"
        android:background="@color/horizontalViewColor"
        android:layout_width = "match_parent"
        android:layout_height="4dp"
        app:layout_constraintBottom_toTopOf="@+id/extend_trim_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
        android:id="@+id/extend_trim_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/play_con1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottom_menu"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/app_margin"
            android:paddingBottom="@dimen/app_margin"
            android:visibility="visible"
            android:weightSum="10"
            app:layout_constraintBottom_toTopOf="@+id/layout_images"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/back1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="2.5"
                android:contentDescription="@string/no_desc"
                android:src="@drawable/ic_back1" />
            <ImageButton
                android:id="@+id/toStartBtn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2.5"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="@string/no_desc"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_prev"
                android:visibility="visible" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5">

                <ImageButton
                    android:id="@id/exo_play"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/no_desc"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_play" />

                <ImageButton
                    android:id="@id/exo_pause"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/no_desc"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_pause_white" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/start_curve"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="BEGIN"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/ic_next_start" />

                <TextView
                    android:id="@+id/end"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="32dp"
                    android:background="@drawable/end_curve"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="end|center"
                    android:paddingStart="10dp"
                    android:paddingEnd="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="END  "
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10sp"
                    app:drawableEndCompat="@drawable/ic_next" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottom_menu"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            android:padding="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/previewFrameList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_screentwo_editer_image"
                android:clickable="false"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:padding="4dp"
                android:paddingStart="@dimen/app_margin"
                android:paddingEnd="@dimen/app_margin"
                android:scrollbars="none" />

            <FrameLayout
                android:id="@+id/timebar_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <com.hipoint.snipback.Utils.SnipbackTimeBar
                    android:tag="main_scrubber"
                    android:id="@id/exo_progress"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:elevation="8dp"
                    android:paddingBottom="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:bar_height="40dp"
                    app:buffered_color="@android:color/transparent"
                    app:played_color="@android:color/transparent"
                    app:scrubber_drawable="@drawable/ic_thumb"
                    app:scrubber_enabled_size="35dp"
                    app:unplayed_color="@android:color/transparent" />

                <ProgressBar
                    android:id="@+id/previewBarProgress"
                    style="@style/Widget.MaterialComponents.CircularProgressIndicator"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/exo_progress"
                    app:layout_constraintEnd_toEndOf="@id/exo_progress"
                    app:layout_constraintStart_toStartOf="@id/exo_progress"
                    app:layout_constraintTop_toTopOf="@id/exo_progress" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>