<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.exozet.android.core.ui.custom.SwipeDistanceView
        android:id="@+id/swipe_detector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#44AA0000" />

    <LinearLayout
        android:id="@+id/progress_duration_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/background_video_timer"
        app:layout_constraintBottom_toTopOf="@id/extend_trim_holder"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:fontFamily="@font/barlow_semibold"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/colorPrimaryWhite" />

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:fontFamily="@font/barlow_semibold"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/extend_trim_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/play_con1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottom_menu"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/app_margin"
            android:paddingBottom="@dimen/app_margin"
            android:visibility="visible"
            android:weightSum="10"
            app:layout_constraintBottom_toTopOf="@+id/layout_images"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/back1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2.5"
                android:contentDescription="@string/no_desc"
                android:src="@drawable/ic_back1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:weightSum="10">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="62dp"
                    android:layout_height="32dp"
                    android:background="@drawable/start_curve"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:text="BEGIN"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/ic_next_start" />

                <TextView
                    android:id="@+id/end"
                    android:layout_width="62dp"
                    android:layout_height="32dp"
                    android:background="@drawable/end_curve"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="end|center"
                    android:paddingEnd="20dp"
                    android:text="END  "
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10sp"
                    app:drawableEndCompat="@drawable/ic_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/accept_reject_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/reject"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:contentDescription="@string/no_desc"
                    android:src="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/accept"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="9dp"
                    android:contentDescription="@string/no_desc"
                    android:src="@drawable/ic_tick_done" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottom_menu"
            android:gravity="center"
            android:layout_marginStart="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            android:padding="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/previewFrameList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_screentwo_editer_image"
                android:clickable="false"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:padding="4dp"
                android:paddingStart="@dimen/app_margin"
                android:paddingEnd="@dimen/app_margin"
                android:scrollbars="none" />

            <FrameLayout
                android:id="@+id/timebar_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <com.hipoint.snipback.Utils.SnipbackTimeBar
                    android:id="@id/exo_progress"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingBottom="3dp"
                    android:visibility="invisible"
                    app:bar_height="40dp"
                    app:buffered_color="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:played_color="@android:color/transparent"
                    app:scrubber_drawable="@drawable/ic_thumb"
                    app:scrubber_enabled_size="35dp"
                    app:unplayed_color="@android:color/transparent" />

                <ProgressBar
                    android:id="@+id/previewBarProgress"
                    style="@style/Widget.MaterialComponents.CircularProgressIndicator"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/exo_progress"
                    app:layout_constraintEnd_toEndOf="@id/exo_progress"
                    app:layout_constraintStart_toStartOf="@id/exo_progress"
                    app:layout_constraintTop_toTopOf="@id/exo_progress" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>