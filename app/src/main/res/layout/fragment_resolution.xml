            android:layout_toRightOf="@+id/img2"
            android:fontFamily="@font/barlow_medium"
            android:gravity="left|center"
            android:text="1080 X 1920 HD @30fbs"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />


    </RelativeLayout>

    <View
