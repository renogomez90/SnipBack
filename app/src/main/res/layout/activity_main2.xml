<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <VideoView  android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu"
        android:id="@+id/videoView" />

    <RelativeLayout
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/back_arrow"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/bottom_menu"
        android:layout_marginBottom="86dp"
        android:gravity="center"
        android:layout_marginLeft="37dp"
        android:background="@drawable/background_black_round">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_back_arrow"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/button_camera"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/bottom_menu"
        android:layout_marginBottom="86dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/back_arrow"
        android:layout_marginLeft="24dp"
        android:background="@drawable/background_black_round">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="13dp"
            android:src="@drawable/ic_camera"/>
    </RelativeLayout>
<!--    <com.google.android.exoplayer2.ui.PlayerView-->
<!--        android:id="@+id/videoView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@+id/photolabel"-->
<!--        android:background="#FFF"-->
<!--        android:focusable="true"-->
<!--        android:visibility="visible"-->

<!--        />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_above="@+id/bottom_menu"
        android:id="@+id/frame">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:id="@+id/bottom_menu"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_menu"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp"
            android:id="@+id/layout_edit"
            android:layout_weight="0.2">

            <ImageButton
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_edit_one" />

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="Camera"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:id="@+id/layout_tag"
            android:layout_weight="0.2">

            <ImageButton
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_edit_one" />

            <TextView
                android:id="@+id/tag_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tag"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Tag"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:id="@+id/layout_shutter"
            android:layout_weight="0.2">

            <ImageButton
                android:id="@+id/shutter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_shutter" />

            <TextView
                android:id="@+id/shutter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shutter"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:fontFamily="@font/barlow_regular"
                android:text="Shutter"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:id="@+id/layout_share"
            android:layout_weight="0.2">

            <ImageButton
                android:id="@+id/_button_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_share" />

            <TextView
                android:id="@+id/_button_share_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_button_share"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Share"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layout_delete"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="0.2">

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete_white" />

            <TextView
                android:id="@+id/button_delete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_delete"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Delete"
                android:fontFamily="@font/barlow_regular"

                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
