<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillAfter="true"
    android:fillEnabled="true"
    android:background="@color/transparent_black_100">

    <com.hipoint.snipback.Utils.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="@color/colorBlack"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_corners"
        android:drawableStart="@drawable/rec_button_small"
        android:drawablePadding="4dp"
        android:paddingStart="7dp"
        android:paddingTop="5dp"
        android:paddingEnd="7dp"
        android:paddingBottom="5dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1x"
        android:id="@+id/zoom_factor"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_above="@id/zoom_control_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/zoom_control_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/zoom_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_cont"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/bottom_cont">

        <ImageButton
            android:id="@+id/zoom_out_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_remove_black_24dp"
            android:contentDescription="@string/no_desc"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/zoom_controller"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/zoom_in_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/zoom_out_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/zoom_in_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_add_black_24dp"
            android:contentDescription="@string/no_desc"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rec_start_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/rec_stop"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:background="@drawable/round_transparent_new"
            android:contentDescription="@string/no_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_stop_video"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/r_2_shutter"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/round_transparent"
            android:contentDescription="@string/no_desc"
            app:layout_constraintStart_toEndOf="@id/rec_stop"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_shutter"
            tools:ignore="VectorDrawableCompat" />


        <ImageButton
            android:id="@+id/r_3_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/round_transparent"
            android:contentDescription="@string/no_desc"
            app:layout_constraintEnd_toStartOf="@id/rec_stop"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_bookmark"
            tools:ignore="VectorDrawableCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:contentDescription="@string/no_desc"
            android:id="@+id/gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_transparent"
            app:srcCompat="@drawable/ic_gallery"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/switch_cam_btn"
            app:layout_constraintTop_toTopOf="@id/bottom_cont"
            app:layout_constraintBottom_toBottomOf="@id/bottom_cont"/>

        <ImageButton
            android:contentDescription="@string/no_desc"
            android:id="@+id/switch_cam_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/gallery_btn"
            android:background="@drawable/round_transparent"
            app:srcCompat="@drawable/ic_check"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintStart_toEndOf="@id/gallery_btn"
            app:layout_constraintEnd_toStartOf="@id/con"
            app:layout_constraintTop_toTopOf="@id/bottom_cont"
            app:layout_constraintBottom_toBottomOf="@id/bottom_cont"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/con"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/switch_cam_btn"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/bottom_cont"
            app:layout_constraintEnd_toStartOf="@id/shutter_btn"
            app:layout_constraintStart_toEndOf="@id/switch_cam_btn"
            app:layout_constraintTop_toTopOf="@id/bottom_cont">

            <ImageButton
                android:id="@+id/back_video_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@drawable/curve"
                android:contentDescription="@string/no_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back_video"
                tools:ignore="VectorDrawableCompat" />


            <ImageButton
                android:id="@+id/back_photo_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@drawable/curve2"
                android:contentDescription="@string/no_desc"
                app:layout_constraintStart_toEndOf="@id/back_video_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_snap"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:background="@drawable/ic_rec"
                android:contentDescription="@string/no_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:contentDescription="@string/no_desc"
            android:id="@+id/shutter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/con"
            android:background="@drawable/round_transparent"
            app:srcCompat="@drawable/ic_camera_diaphram"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintStart_toEndOf="@id/con"
            app:layout_constraintEnd_toStartOf="@id/menu_btn"
            app:layout_constraintTop_toTopOf="@id/bottom_cont"
            app:layout_constraintBottom_toBottomOf="@id/bottom_cont"/>

        <ImageButton
            android:contentDescription="@string/no_desc"
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/shutter_btn"
            android:background="@drawable/round_transparent"
            app:srcCompat="@drawable/ic_menu"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintStart_toEndOf="@id/shutter_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottom_cont"
            app:layout_constraintBottom_toBottomOf="@id/bottom_cont"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>