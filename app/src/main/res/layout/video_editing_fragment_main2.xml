<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:controller_layout_id="@layout/exo_edit_controller"
        app:use_controller="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:id="@+id/edit_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_editor"
        android:background="@color/bottom_menu"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_screentwo_editer_image"
            android:gravity="center"
            android:padding="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/previewFrameList"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:clipToPadding="true"
                android:clipChildren="true"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_editor"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_menu"
        android:baselineAligned="false"
        android:gravity="center"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_extent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="0.2">

            <ImageButton
            android:contentDescription="@string/no_desc"
                android:id="@+id/extent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_extend" />

            <TextView
                android:id="@+id/extent_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extent"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="Extend/Trim"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2">

            <ImageButton
            android:contentDescription="@string/no_desc"
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_cutout" />

            <TextView
                android:id="@+id/link_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/link"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="CutOut"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2">

            <ImageButton
            android:contentDescription="@string/no_desc"
                android:id="@+id/filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_highlight" />

            <TextView
                android:id="@+id/filter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/filter"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="Highlight"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2">

            <ImageButton
            android:contentDescription="@string/no_desc"
                android:id="@+id/_button_view"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_slowmo" />

            <TextView
                android:id="@+id/_button_view_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/_button_view"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="Slow"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_weight="0.2">

            <ImageButton
            android:contentDescription="@string/no_desc"
                android:id="@+id/dropdown_menu"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_speed" />

            <TextView
                android:id="@+id/dropdown_menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dropdown_menu"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="Speed"
                android:textColor="@color/colorPrimaryGrey"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>